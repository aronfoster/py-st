{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "py-st: module (interactive)",
      "type": "debugpy",
      "request": "launch",
      "module": "py_st",
      "args": "${input:cliArgs}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Pytest: All Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-q"
      ],
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ],
  "inputs": [
    {
      "id": "cliArgs",
      "type": "promptString",
      "description": "Enter the CLI arguments for py-st",
      "default": "agent"
    }
  ]
}
